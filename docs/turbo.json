{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "dependsOn": ["@likec4/cli#build"],
      "outputs": ["components/**/generated.tsx"],
      "inputs": ["package.json", "**/*.c4"]
    },
    "typecheck": {
      "dependsOn": ["generate", "^typecheck"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["generate", "^build"],
      "outputs": [".next/**", "out/**", "!.next/cache/**"]
    }
  }
}
