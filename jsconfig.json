{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "react",
    "checkJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["**/*.js", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules", "dist", "packages/*/dist/**/*"]
}
