{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "generate": {
      "outputMode": "new-only"
    },
    "typecheck": {
      "outputMode": "new-only",
      "dependsOn": ["generate", "topo"],
      "outputs": [
        ".tsbuildinfo/**",
        "**/*.tsbuildinfo"
      ]
    },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["generate", "^build"],
      "outputs": ["dist/**", ".tsbuildinfo/**"]
    },
    "clean": {
      "cache": false
    }
  },
  "experimentalUI": true,
  "globalDependencies": [
    "tsconfig.*.json",
    "tsconfig.json",
    "yarn.lock"
  ]
}
