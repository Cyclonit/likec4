{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "generate": {
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "topo"
      ],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#clean:root": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "generate"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
