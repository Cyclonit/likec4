{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": [
        "dist/**",
        "contrib/**"
      ],
      "inputs": [
        "src/**"
      ]
    },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["^build"],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**",
        "contrib/**"
      ]
    },
    "build:release": {
      "dependsOn": ["^build:release"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"]
    },
    "test:watch": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
