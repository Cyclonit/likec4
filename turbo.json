{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "yarn.lock",
    "package.json"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "generate": {
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "topo"
      ],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "likec4#build": {
      "dependsOn": [
        "^generate"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "likec4-vscode#build": {
      "dependsOn": [
        "^generate",
        "@likec4/vscode-preview#build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@likec4/vscode-preview#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
