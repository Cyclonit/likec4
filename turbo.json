{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "yarn.lock",
    "package.json"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "generate": {
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "topo"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    },
    "dev": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
