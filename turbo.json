{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV"
  ],
  "globalDependencies": [
    ".tool-versions",
    "package.json",
    "yarn.lock",
    ".yarnrc.yml"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "generate": {
      "outputs": [],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "@likec4/log#build",
        "generate",
        "topo"
      ],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": [
        "^generate",
        "generate"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    },
    "dev": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#clean:root": {
      "cache": false
    }
  }
}
