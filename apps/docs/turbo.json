{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "likec4#build"
      ],
      "inputs": [
        "src/content/config.ts",
        "src/**/*.c4"
      ],
      "outputs": [
        "src/components/*/likec4-views.*",
        ".astro/**",
        "src/env.d.ts"
      ]
    },
    "build": {
      "dependsOn": [
        "generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!src/content/config.ts",
        "!likec4/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    // We override the default "test" task to exclude the "generate"
    "test": {
      "dependsOn": []
    }
  }
}
