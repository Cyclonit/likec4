{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "dependsOn": ["likec4#build"],
      "outputs": ["src/components/*/likec4-views.*"],
      "inputs": ["likec4/**"]
    },
    "typecheck": {
      "dependsOn": ["generate", "^build"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["generate", "^build"],
      "outputs": ["dist/**", ".astro/**"]
    }
  }
}
