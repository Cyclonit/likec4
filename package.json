{
  "name": "root",
  "version": "0.3.1",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "docs/",
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=17"
  },
  "scripts": {
    "compile": "turbo run compile --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "release-build": "turbo run clean release:build",
    "clean": "turbo run clean",
    "clean:after:publish": "rimraf --glob '**/package*.tgz' --interactive",
    "dev": "turbo run dev --filter='./packages/*'",
    "test": "turbo run test --filter='./packages/*'",
    "test:watch": "turbo run test:watch --filter='./packages/*'",
    "lint": "turbo run lint --continue --filter='./packages/*'",
    "vitest:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/ui": "^0.30.1",
    "eslint": "^8.38.0",
    "rimraf": "^4.4.1",
    "turbo": "^1.9.1",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  },
  "volta": {
    "node": "18.15.0"
  }
}
