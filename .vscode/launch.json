// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}", "--single-thread"],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/packages/vscode/dist/**/*"
      ],
      "enableTurboSourcemaps": true,
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "${workspaceFolder}/examples/bigbank",
      ],
      "preLaunchTask": "npm: build:vscode - packages/vscode",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "port": 6009,
      "request": "attach",
      "restart": {
        "delay": 2000,
        "maxAttempts": 30
      },
      "outFiles": [
        "${workspaceFolder}/packages/vscode/dist/**/*.js"
      ]
    }
  ]
}
