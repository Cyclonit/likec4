{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.enable": false,
  "npm.packageManager": "yarn",
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[json5]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[mdx]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "search.exclude": {
    "node_modules/**": true,
    "docs/.next/**": true,
    "docs/node_modules/**": true,
    "examples/*/dist/**": true,
    "packages/*/dist/**": true,
    "packages/*/node_modules/**": true
  },
  "files.exclude": {
    "**/.turbo": true,
    "packages/*/.tsbuildinfo": true,
    "packages/*/.vscode-test-web": true
  },
  "vitest.commandLine": "yarn run vitest",
  "vitest.enable": true,
  "exportall.config.semis": false,
  "json.schemas": [
    {
      "url": "node_modules/langium-cli/langium-config-schema.json",
      "fileMatch": [
        "langium-config.json"
      ]
    }
  ],
  "exportall.config.folderListener": [
    "/packages/diagram/src/icons"
  ],
  "cSpell.words": [
    "clsx",
    "codegen",
    "execa",
    "gridify",
    "hookz",
    "khroma",
    "langium",
    "likec4",
    "mantine",
    "nodrag",
    "nonexhaustive",
    "nopan",
    "outfile",
    "pannable",
    "rawmodel",
    "reactflow",
    "remeda",
    "styleprops",
    "tanstack",
    "tilg",
    "typecheck",
    "webcola",
    "xyflow",
    "zoomable"
  ]
}
