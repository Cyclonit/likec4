{
  "$schema": 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    "config:best-practices",
    "npm:unpublishSafe",
    "helpers:disableTypesNodeMajor",
    ":preserveSemverRanges"
  ],
  prHourlyLimit: 10,
  prConcurrentLimit: 10,
  rangeStrategy: 'bump',
  updateInternalDeps: true,
  labels: ['dependencies'],
  packageRules: [
    {
      "groupName": "linters",
      "matchDepNames": [
        "@types/eslint",
        "prettier",
        "lint-staged",
        "dprint"
      ],
      "matchPackagePrefixes": [
        "@commitlint",
        "@typescript-eslint/",
        "eslint"
      ],
      automerge: true
    },
    {
      groupName: "@langium",
      matchDepPatterns: ['langium']
    },
    {
      groupName: "@vanilla-extract",
      matchPackagePrefixes: [
        "@vanilla-extract/"
      ],
    },
    {
      groupName: "@codingame",
      matchPackagePrefixes: [
        "@codingame/"
      ],
    },
    // Auto merge
    {
      matchPackagePrefixes: [
        "@tabler/",
        "@fontsource/",
      ],
      automerge: true
    },
    // Update manually
    {
      enabled: false,
      matchDepNames: [
        'next',
        'lucide-react',
        'react-icons',
        'tailwind'
      ]
    },
    {
      enabled: false,
      matchDepPatterns: [
        '^monaco',
        '^@monaco'
      ]
    },
    {
      enabled: false,
      matchDepNames: ['@types/vscode', 'vscode'],
      matchDepPatterns: ['^vscode-']
    },
  ]
}
