{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', 'schedule:earlyMondays', 'helpers:disableTypesNodeMajor'],
  prHourlyLimit: 5,
  prConcurrentLimit: 10,
  rangeStrategy: 'bump',
  updateInternalDeps: true,
  labels: ['dependencies'],
  rebaseWhen: 'conflicted',
  packageRules: [
    {
      groupName: 'vitest',
      matchPackageNames: ['vite-node', 'vitest'],
      matchPackagePatterns: ['^@vitest/']
    },
    {
      groupName: 'react',
      matchPackageNames: ['react', 'react-dom']
    },
    {
      enabled: false,
      matchPackageNames: ['@types/vscode', 'vscode', 'next'],
      matchPackagePatterns: ['^monaco-', '^@monaco-editor', '^vscode-']
    },
    {
      matchPackagePatterns: ['eslint*', 'prettier'],
      automerge: true
    }
  ]
}
