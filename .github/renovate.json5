{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:disableTypesNodeMajor"
  ],
  "baseBranches": [
    "main",
    "develop"
  ],
  "packageRules": [
    {
      "groupName": "vitest",
      "matchPackageNames": [
        "vite-node",
        "vitest"
      ],
      "matchPackagePatterns": [
        "^@vitest/"
      ]
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "@monaco-editor/react",
        "@types/vscode",
        "vscode"
      ],
      "matchPackagePatterns": [
        "^monaco-",
        "^vscode-"
      ]
    }
  ]
}
