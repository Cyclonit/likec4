{
  "$schema": 'https://docs.renovatebot.com/renovate-schema.json',
  "configMigration": true,
  "extends": [
    "config:recommended",
    "group:monorepos",
    "npm:unpublishSafe",
    "helpers:disableTypesNodeMajor"
  ],
  prHourlyLimit: 5,
  prConcurrentLimit: 5,
  rangeStrategy: 'bump',
  updateInternalDeps: true,
  labels: ['dependencies'],
  "lockFileMaintenance": {
     "enabled": true
  },
  packageRules: [
    // Disable pin digest for CI Actions
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": false
    },
    {
      "groupName": "linters",
      "matchDepNames": [
        "@types/eslint",
        "prettier",
        "lint-staged",
        "dprint"
      ],
      "matchPackagePrefixes": [
        "@commitlint",
        "@typescript-eslint/",
        "eslint"
      ],
      automerge: true
    },
    {
      groupName: "@langium",
      matchDepPatterns: ['langium']
    },
    {
      groupName: "@vanilla-extract",
      matchPackagePrefixes: [
        "@vanilla-extract"
      ],
    },
    {
      groupName: "@xyflow",
      matchPackagePrefixes: [
        "@xyflow"
      ],
    },
    // Auto merge
    {
      matchPackagePrefixes: [
        "@tabler",
        "@fontsource",
      ],
      automerge: true
    },
    // Update manually
    {
      enabled: false,
      matchDepPatterns: [
        '^monaco',
        '^@monaco',
        '^@codingame'
      ]
    },
    {
      enabled: false,
      matchDepNames: ['@types/vscode', 'vscode'],
      matchDepPatterns: ['^vscode-']
    }
  ]
}
