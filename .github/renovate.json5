{
  "$schema": 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    "config:best-practices",
    "npm:unpublishSafe",
    "helpers:disableTypesNodeMajor"
  ],
  prHourlyLimit: 10,
  prConcurrentLimit: 5,
  rangeStrategy: 'bump',
  updateInternalDeps: true,
  labels: ['dependencies'],
  packageRules: [
    {
      "groupName": "linters",
      "matchPackageNames": [
        "@types/eslint",
        "prettier",
        "lint-staged",
        "dprint"
      ],
      "matchPackagePrefixes": [
        "@commitlint",
        "@typescript-eslint/",
        "eslint"
      ],
      automerge: true
    },
    {
      groupName: "langium",
      matchPackagePatterns: ['langium']
    },
    // Update manually
    {
      enabled: false,
      matchPackageNames: [
        'next',
        'lucide-react',
        'react-icons',
        'tailwind'
      ],
      "matchPackagePrefixes": [
        "@tabler/"
      ],
    },
    {
      enabled: false,
      matchPackageNames: ['@types/react', '@types/react-dom'],
    },
    {
      enabled: false,
      matchPackagePatterns: ['^monaco', '^@monaco']
    },
    {
      enabled: false,
      matchPackageNames: ['@types/vscode', 'vscode'],
      matchPackagePatterns: ['^vscode-']
    },
  ]
}
