{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:disableTypesNodeMajor"
  ],
  "packageRules": [
    {
      "groupName": "vitest",
      "matchPackageNames": [
        "vite-node",
        "vitest"
      ],
      "matchPackagePatterns": [
        "^@vitest/"
      ]
    },  
    {
      "enabled": false,
      "matchPackageNames": [        
        "@types/vscode",
        "vscode",
        "next"
      ],
      "matchPackagePatterns": [
        "^monaco-",
        "^@monaco-editor",
        "^vscode-"
      ]
    }
  ]
}
