{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "sourceMap": true,
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/__test__",
    "./src/test/*",
    "./src/**/*.spec.ts",
    "node_modules"
  ]
}
