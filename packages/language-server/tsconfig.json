{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../core" },
  ]
}
