{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "sourceMap": false,
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
