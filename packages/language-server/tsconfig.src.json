{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "noUnusedParameters": false,
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo"
  },
  "include": ["./src"],
  "exclude": [
    "./src/browser",
    "./src/node",
    "./dist",
    "**/node_modules",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../graph"
    }
  ]
}
