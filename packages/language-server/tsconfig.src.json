{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "noUnusedParameters": false,
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "src/browser",
    "src/node",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__test__/**/*",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../graph"
    }
  ]
}
