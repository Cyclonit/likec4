  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false
  },
  "files": [
    "src/index.ts",
    "src/protocol.ts",
    "src/builtin.ts"
