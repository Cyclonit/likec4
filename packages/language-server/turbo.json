{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "outputMode": "new-only",
      "outputs": ["contrib/**", "src/generated/**"],
      "inputs": ["src/**/*.langium", "langium-config.json"]
    },
    "typecheck": {
      "dependsOn": ["generate", "^build"],
      "cache": false,
      "outputs": []
    },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["generate", "^build"],
      "outputs": ["dist/**", ".tsbuildinfo/**"]
    }
  }
}
