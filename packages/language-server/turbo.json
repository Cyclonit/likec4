{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "outputs": ["contrib/**", "src/generated/**"],
      "inputs": ["package.json", "src/**/*.langium", "langium-config.json"]
    },
    "typecheck": {
      "dependsOn": ["generate", "^typecheck"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["generate", "^build"],
      "outputs": ["dist/**"]
    }
  }
}
