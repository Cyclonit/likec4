{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "outputs": [
        "contrib/**",
        "src/generated/**"
      ],
      "inputs": [
        "src/**/*.langium",
        "langium-config.json"
      ]
    },
    "compile": {
      "dependsOn": ["generate", "^build"],
      "outputs": []
    },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["generate", "^build"],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
