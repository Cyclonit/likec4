{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "outputs": [
        "contrib/**",
        "src/generated/**"
      ],
      "inputs": [
        "src/**/*.langium",
        "langium-config.json",
        "package.json"
      ]
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!src/**/*.langium",
        "!langium-config.json"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
