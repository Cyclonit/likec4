{
  "name": "@likec4/language-server",
  "version": "0.1.0",
  "scripts": {
    "compile": "",
    "prepack": "yarn generate && tsc -p tsconfig.build.json",
    "build:langium": "langium generate",
    "build:ts": "tsc",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc --watch",
    "generate": "langium generate",
    "build": "run-s 'build:langium' 'build:ts'",
    "dev": "run-p 'watch:*'",
    "lint": "eslint src --fix",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "type": "module",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://like-c4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./protocol": "./src/protocol.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./protocol": {
        "types": "./dist/protocol.d.ts",
        "import": "./dist/protocol.js",
        "require": "./dist/protocol.cjs"
      }
    }
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "@mobily/ts-belt": "^3.13.1",
    "langium": "^1.1.0",
    "nanoid": "^4.0.2",
    "object-hash": "^3.0.0",
    "rambdax": "^9.1.0",
    "strip-indent": "^4.0.0",
    "tiny-invariant": "^1.3.1",
    "type-fest": "^3.7.2",
    "vscode-languageserver-protocol": "3.17.2",
    "vscode-uri": "^3.0.7"
  },
  "devDependencies": {
    "@likec4/eslint-config": "workspace:*",
    "@types/node": "^18.15.6",
    "@types/object-hash": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "langium-cli": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
}
