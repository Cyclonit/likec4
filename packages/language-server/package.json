    "clean": "rm -rf .turbo dist",
    "test": "vitest run",
    "vitest": "vitest"
  },
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "dependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/language-server-protocol": "workspace:*",
    "@mobily/ts-belt": "^3.13.1",
    "langium": "^1.1.0",
    "nanoid": "^4.0.1",
    "object-hash": "^3.0.0",
    "rambdax": "^9.0.0",
    "strip-indent": "^4.0.0",
    "tiny-invariant": "^1.3.1",
    "type-fest": "^3.7.0",
    "vscode-languageserver-protocol": "^3.17.3",
    "vscode-uri": "^3.0.7"
  },
  "devDependencies": {
    "@likec4/eslint-config": "workspace:*",
    "@types/node": "^18.15.6",
    "@types/object-hash": "^3.0.2",
    "eslint": "^8.36.0",
    "langium-cli": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  }
