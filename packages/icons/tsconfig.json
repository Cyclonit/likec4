{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": false,
    "target": "ES2020",
    "module": "Preserve",
    "allowArbitraryExtensions": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
