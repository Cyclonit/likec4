{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "dependsOn": ["@likec4/cli#build"],
      "outputs": ["src/stories/likec4/*.generated.ts"],
      "inputs": ["package.json", "**/*.c4"]
    },
    "typecheck:diagrams": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "typecheck:stories": {
      "dependsOn": ["typecheck:diagrams", "generate"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    }
  }
}
