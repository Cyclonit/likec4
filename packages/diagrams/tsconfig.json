{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "preserve",
    "verbatimModuleSyntax": false,
    "ignoreDeprecations": "5.0",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../language-server" },
    { "path": "../generators" },
    { "path": "../layouts" },
    { "path": "../core" }
  ]
}
