{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "remove",
    "jsx": "react-jsx"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "types",
    "dist"
  ]
}
