{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsxdev",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
