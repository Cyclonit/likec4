{
  "name": "@likec4/diagrams",
  "version": "0.7.0",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://like-c4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "types",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/diagrams"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src/*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*/index.ts"
    ],
    "./package.json": "./package.json",
    "./dist/style.css": "./dist/index.css",
    "./dist/index.css": "./dist/index.css"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "compile": "tsc --emitDeclarationOnly",
    "build:ts": "yarn node esbuild.mjs",
    "build:tsd": "tsc --emitDeclarationOnly",
    "build": "run-s 'build:ts' 'build:tsd'",
    "dev:ts": "yarn node esbuild.mjs --watch",
    "dev:tsd": "run build:tsd --watch",
    "dev": "run-p 'dev:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist types"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@likec4/core": "workspace:*",
    "@radix-ui/colors": "^0.1.8",
    "@radix-ui/react-dialog": "^1.0.3",
    "@react-hookz/deep-equal": "^1.0.4",
    "@react-hookz/web": "^23.0.0",
    "@react-spring/konva": "^9.7.2",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/dynamic": "^2.0.3",
    "@vanilla-extract/esbuild-plugin": "^2.2.2",
    "@vanilla-extract/recipes": "^0.4.0",
    "animated-konva": "link:./src/animated-konva",
    "clsx": "^1.2.1",
    "esbuild": "^0.17.18",
    "khroma": "^2.0.0",
    "konva": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "polished": "^4.2.2",
    "rambdax": "^9.1.0",
    "react-konva": "patch:react-konva@npm%3A18.2.7#../../.yarn/patches/react-konva-npm-18.2.7-34b0fd52b5.patch",
    "tilg": "^0.1.1",
    "tiny-invariant": "^1.3.1",
    "typescript": "^5.0.4"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
