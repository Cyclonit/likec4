{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "tsBuildInfoFile": ".tsbuildinfo/tsconfig.tsbuildinfo",
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": [
      "vite/client",
    ]
  },
  "include": [
    "./src"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
