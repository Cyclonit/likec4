{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/tsconfig.tsbuildinfo",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsxdev",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase"
        }
      }
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "./src"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
