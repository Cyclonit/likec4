{
  "name": "@likec4/core",
  "version": "0.33.1",
  "license": "MIT",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/core"
  },
  "bugs": "https://github.com/likec4/likec4/issues",
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "unbuild",
    "dev": "tsc --watch",
    "lint": "run -T eslint src/ --fix",
    "test": "run -T vitest run",
    "test:watch": "run -T vitest",
    "clean": "run -T rimraf dist"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./types": {
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/types/index.cjs"
      },
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/types/index.mjs"
      }
    },
    "./colors": {
      "require": {
        "types": "./dist/colors.d.cts",
        "default": "./dist/colors.cjs"
      },
      "import": {
        "types": "./dist/colors.d.mts",
        "default": "./dist/colors.mjs"
      }
    },
    "./errors": {
      "require": {
        "types": "./dist/errors/index.d.cts",
        "default": "./dist/errors/index.cjs"
      },
      "import": {
        "types": "./dist/errors/index.d.mts",
        "default": "./dist/errors/index.mjs"
      }
    },
    "./utils": {
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      },
      "import": {
        "types": "./dist/utils/index.d.mts",
        "default": "./dist/utils/index.mjs"
      }
    },
    "./compute-view": {
      "require": {
        "types": "./dist/compute-view/index.d.cts",
        "default": "./dist/compute-view/index.cjs"
      },
      "import": {
        "types": "./dist/compute-view/index.d.mts",
        "default": "./dist/compute-view/index.mjs"
      }
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.1.13",
    "rambdax": "^9.1.1",
    "remeda": "^1.24.0",
    "safe-json-value": "^2.0.1",
    "ts-custom-error": "^3.3.1"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "unbuild": "^2.0.0-rc.0",
    "vitest": "^0.34.1"
  }
}
