{
  "name": "@likec4/core",
  "version": "0.4.0",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://like-c4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git"
  },
  "scripts": {
    "compile": "",
    "release:build": "tsc -p tsconfig.esm.json",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "run -T eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./utils": "./src/utils/index.ts",
    "./compute-view": "./src/compute-view/index.ts"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./types": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/types/index.js",
        "require": "./dist/types/index.cjs"
      },
      "./utils": {
        "types": "./dist/utils/index.d.ts",
        "import": "./dist/utils/index.js",
        "require": "./dist/utils/index.cjs"
      },
      "./compute-view": {
        "types": "./dist/compute-view/index.d.ts",
        "import": "./dist/compute-view/index.js",
        "require": "./dist/compute-view/index.cjs"
      }
    }
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.1.12",
    "rambdax": "^9.1.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  }
}
