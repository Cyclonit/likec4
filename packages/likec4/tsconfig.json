{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "module": "esnext",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src",
    "./test",
    "./scripts",
    "package.json"
  ],
  "references": [
    {
      "path": "./app/tsconfig.json"
    }
  ]
}
