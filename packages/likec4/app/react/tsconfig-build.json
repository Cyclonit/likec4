
{
  // This file is used to generate the declaration files for the react package
  "extends": "@likec4/tsconfig/react-lib.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "esnext",
    "declarationDir": "../../react/",
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedParameters": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "rootDir": "./components",
    "types": [
      "vite/client"
    ]
  },
  "files": [
    "./components/global.d.ts",
    "./components/index.ts"
  ]
}
