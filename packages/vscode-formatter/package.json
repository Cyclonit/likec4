{
  "name": "likec4-vscode-formatter",
  "version": "1.7.4",
  "private": true,
  "pricing": "Free",
  "publisher": "likec4",
  "displayName": "LikeC4 Formatter",
  "description": "Formatter for the LikeC4 modeling language",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "license": "MIT",
  "sponsor": {
    "url": "https://github.com/sponsors/davydkov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/likec4/likec4/issues",
    "email": "denis@davydkov.com"
  },
  "vsce": {
    "dependencies": false,
    "yarn": true
  },
  "scripts": {
    "vscode:prepublish": "tsx scripts/prepublish.mts",
    "open-web": "run build:turbo && yarn dlx @vscode/test-web --open-devtools --extensionDevelopmentPath=. ../likec4/dev",
    "typecheck": "tsc --noEmit",
    "build:turbo": "run -T turbo run build --filter='likec4-vscode-formatter'",
    "build": "tsx scripts/build.mts",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf contrib dist src/generated",
    "vsce:pack": "yarn dlx vsce package",
    "vsce:publish": "yarn dlx vsce publish --skip-duplicate"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "architecture",
    "architecture-as-code",
    "diagrams",
    "c4"
  ],
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "icon": "data/logo256.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "likec4",
        "aliases": [
          "LikeC4",
          "Like C4"
        ],
        "extensions": [
          ".c4",
          ".likec4",
          ".like-c4"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "data/icon-256-light.png",
          "dark": "data/icon-256-dark.png"
        }
      }
    ]
  },
  "main": "dist/extension.js",
  "browser": "dist/extension.js",
  "devDependencies": {
    "@types/node": "^20.16.1",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.21.5",
    "esbuild-plugins-node-modules-polyfill": "^1.6.5",
    "tslib": "^2.6.3",
    "tsx": "~4.9.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "packageManager": "yarn@4.3.1"
}
