{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "ESNext", "WebWorker"
    ],
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
