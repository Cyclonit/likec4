{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
