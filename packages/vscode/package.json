{
  "name": "@likec4/vscode",
  "publisher": "likec4",
  "displayName": "Like C4",
  "description": "Please enter a brief description here",
  "version": "1.0.0",
  "scripts": {
    "rebuild": "run -T build",
    "open-web": "run rebuild && npx @vscode/test-web --quality stable --extensionDevelopmentPath=. $PROJECT_CWD/example/likec4",
    "compile": "tsc --b -noEmit",
    "copy:contrib": "shx echo 'copy contrib' && shx --silent cp -r ../language-server/contrib/* contrib/",
    "copy": "run-p 'copy:*'",
    "build": "node esbuild.js && run-p 'copy:*'",
    "dev": "node esbuild.js --watch",
    "lint": "eslint src --fix",
    "clean": "shx --silent rm -rf .turbo dist"
  },
  "files": [
    "contrib",
    "dist"
  ],
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "likec4",
        "aliases": [
          "Like C4",
          "likec4"
        ],
        "extensions": [
          ".lkc4",
          ".likec4",
          ".like-c4"
        ],
        "configuration": "language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "likec4",
        "scopeName": "source.likec4",
        "path": "contrib/like-c4.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "likec4.open-preview",
        "category": "C4X",
        "title": "Open Preview"
      }
    ],
    "configuration": {
      "title": "Like C4",
      "properties": {
        "likec4.trace.extension": {
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "verbose",
          "description": "Enable debug logging for the LikeC4 extension.",
          "scope": "window"
        },
        "likec4.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the LikeC4 language server."
        }
      }
    }
  },
  "activationEvents": [
    "onWebviewPanel:likec4-preview"
  ],
  "main": "dist/node/index.js",
  "browser": "dist/browser/index.js",
  "devDependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/eslint-config": "workspace:*",
    "@likec4/language-server": "workspace:*",
    "@likec4/language-server-protocol": "workspace:*",
    "@types/node": "^18.15.6",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.16.17",
    "eslint": "^8.36.0",
    "froebel": "^0.23.2",
    "langium": "^1.1.0",
    "nanoid": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "rambdax": "^9.0.0",
    "shx": "^0.3.4",
    "typed-inject": "^3.0.1",
    "typescript": "^5.0.2",
    "vscode-jsonrpc": "8.0.2",
    "vscode-languageclient": "8.0.2",
    "vscode-languageserver": "8.0.2",
    "vscode-languageserver-protocol": "^3.17.3",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-languageserver-types": "^3.17.3",
    "vscode-uri": "^3.0.7",
    "xstream": "^11.14.0"
  },
  "packageManager": "yarn@3.4.1"
}
