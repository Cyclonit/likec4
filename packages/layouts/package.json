{
  "name": "@likec4/layouts",
  "license": "MIT",
  "version": "1.8.1",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "!dist/src",
    "!**/__fixtures__/",
    "!**/*.spec.*",
    "!**/*.snap",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/layouts"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./graphviz/binary": {
      "types": "./dist/graphviz/binary/index.d.ts",
      "default": "./dist/graphviz/binary/index.mjs"
    },
    "./graphviz/wasm": {
      "types": "./dist/graphviz/wasm/index.d.ts",
      "default": "./dist/graphviz/wasm/index.mjs"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "unbuild",
    "lint": "run -T eslint src/ --fix",
    "test": "vitest run --no-isolate",
    "test:watch": "vitest",
    "clean": "run -T rimraf -g 'dist/**'"
  },
  "dependencies": {
    "@hpcc-js/wasm-graphviz": "1.2.0",
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "esm-env": "^1.0.0",
    "execa": "^9.3.1",
    "indent-string": "^5.0.0",
    "khroma": "^2.1.0",
    "p-limit": "^6.1.0",
    "remeda": "^2.11.0",
    "strip-indent": "^4.0.0",
    "type-fest": "^4.21.0"
  },
  "devDependencies": {
    "@likec4/language-server": "workspace:*",
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "^20.16.1",
    "ts-graphviz": "^1.8.2",
    "typescript": "^5.5.4",
    "unbuild": "^3.0.0-rc.7",
    "vitest": "~2.0.5",
    "word-wrap": "^1.2.5"
  },
  "packageManager": "yarn@4.3.1"
}
