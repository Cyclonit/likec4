{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "exclude": [
    "node_modules",
    "${configDir}/node_modules",
    "dist",
    "${configDir}/dist",
    "build",
    "${configDir}/build",
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2023",
      "webworker"
    ],
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution": "Bundler"
  }
}
