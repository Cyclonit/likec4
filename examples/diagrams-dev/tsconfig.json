    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "jsx": "react-jsxdev",
    "types": [
      "vite/client"
    ]
